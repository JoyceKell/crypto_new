<h1> <%=t('edicao_moeda')%> </h1>

<%= render 'form', coin: @coin %>

<%= link_to t('mostrar'), @coin, class:"btn btn-primary" %> |
<%= link_to t('voltar'), coins_path, class:"btn btn-primary"%>

index html do coin 
	<p id="notice"><%= notice %></p>
<h1> <%=t('moedas')%> </h1>
<p> Data: <%= date_br(Date.today)%> </p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> <%=@coins.human_attribute_name(:deion)%> </th>
      <th> <%=@coins.human_attribute_name(:acronym)%>  </th>
      <th> <%=@coins.human_attribute_name(:url_image)%>  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.deion %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25" %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('nova_moeda'), new_coin_path, class: "btn btn-primary"%>
