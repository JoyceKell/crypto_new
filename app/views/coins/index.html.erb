<p id="notice"><%= notice %></p>
<h1> <%=t('moedas')%> </h1>
<p> Data: <%= date_br(Date.today)%> </p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> <%=@coins.human_attribute_name(:description)%> </th>
      <th> <%=@coins.human_attribute_name(:acronym)%>  </th>
      <th> <%=@coins.human_attribute_name(:url_image)%>  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25" %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('nova_moeda'), new_coin_path, class: "btn btn-primary"%>
